<div class='row'>

  <div class='p-3 col-md-6 col-lg-5 h-100'>
    <div class='table-responsive'>
      <table class='table table-striped table-borderless table-sm table-hover'>
        <thead>
        <tr>
          <th scope='col'>Player</th>
          <th scope='col'>Score</th>
        </tr>
        </thead>
        <tbody id='ranking'>
        <% @players.each {|player| %>
          <tr>
            <td><%= player.name %></td>
            <td><%= player.score %></td>
          </tr>
        <% } %>
        </tbody>
      </table>
    </div>
  </div>

</div>